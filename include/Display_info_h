#ifndef DISPLAY_INFO_H
#define DISPLAY_INFO_H

#include <iostream>

template<typename T>
class DisplayInfo {
private:
    T info;
    std::string message;
    
public:
    DisplayInfo(T value, std::string msg) : info(value), message(msg) {}
    
    void showInfo() {
        std::cout << message << info << std::endl;
    }
};

#endif
